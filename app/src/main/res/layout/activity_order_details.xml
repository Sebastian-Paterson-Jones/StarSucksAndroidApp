<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderDetailsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/starsuckslogo" />

    <TextView
        android:id="@+id/tv_placedOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="You Ordered"
        android:textAlignment="center"
        android:textColor="@color/starsucksGreen"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_orderedBeverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/et_customerName"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Who are you?"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_customerCell"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Cellphone"
            android:inputType="number"
            android:minHeight="48dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <LinearLayout
            android:layout_width="309dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Date select"
                android:backgroundTint="@color/eggWhites"
                android:clickable="true"
                app:backgroundTint="#DDDDDD"
                app:srcCompat="@drawable/ic_baseline_date_range_24" />

            <Space
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Like it"
                android:backgroundTint="@color/eggWhites"
                android:clickable="true"
                app:backgroundTint="#DDDDDD"
                app:srcCompat="@drawable/ic_baseline_healing_24" />

            <Space
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Check the cloud"
                android:backgroundTint="@color/eggWhites"
                android:clickable="true"
                app:backgroundTint="#DDDDDD"
                app:srcCompat="@drawable/ic_baseline_cloud_24" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>